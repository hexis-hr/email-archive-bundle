{
  "name": "hexis-hr/email-archive-bundle",
  "description": "A Symfony bundle to archive sent emails to the filesystem.",
  "type": "symfony-bundle",
  "keywords": [
    "php",
    "symfony",
    "reusable bundle"
  ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Hexis",
      "homepage": "https://hexis.hr/"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Hexis\\EmailArchiveBundle\\": "src/"
    }
  },
  "require": {
    "php": ">=8.1",
    "symfony/filesystem": "^6.2|^7.0",
    "symfony/mailer": "^6.2|^7.0",
    "symfony/event-dispatcher": "^6.2|^7.0",
    "symfony/dependency-injection": "^6.2|^7.0",
    "symfony/config": "^6.2|^7.0",
    "symfony/http-kernel": "^6.2|^7.0",
    "symfony/mime": "^6.2|^7.0"
  }
}
